# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/carcosa

# API Configuration
API_PORT=4000
API_URL=http://localhost:4000

# SECURITY CRITICAL: Generate strong secrets for production
# NEVER use the example values below in production!
#
# Generate API_SECRET (16+ chars): openssl rand -base64 24
# Generate JWT_SECRET (32+ chars): openssl rand -base64 48
API_SECRET=CHANGE-THIS-generate-with-openssl-rand-base64-24
JWT_SECRET=CHANGE-THIS-generate-with-openssl-rand-base64-48-must-be-at-least-32-chars

# Redis (optional - falls back to Postgres for rate limiting)
REDIS_URL=redis://localhost:6379

# Encryption key for bucket credentials (REQUIRED)
# Generate with: node -e "console.log('base64:' + require('crypto').randomBytes(32).toString('base64'))"
# MUST be 32 bytes (43 base64 chars + padding)
CREDENTIALS_ENCRYPTION_KEY=CHANGE-THIS-base64:generate-with-node-crypto-randomBytes-32

# Frontend URL for CORS (development)
FRONTEND_URL=http://localhost:3000

# MinIO (for local development S3 emulation)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=carcosa-demo

# Frontend (Next.js public variable)
NEXT_PUBLIC_API_URL=http://localhost:4000
