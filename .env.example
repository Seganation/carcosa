# Environment
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/carcosa

# API Configuration
API_PORT=4000
API_URL=http://localhost:4000
API_SECRET=supersecret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-must-be-at-least-32-characters

# Redis (optional - falls back to in-memory for rate limiting)
# REDIS_URL=redis://localhost:6379

# Encryption key for bucket credentials (base64 encoded, required)
# Generate with: node -e "console.log('base64:' + require('crypto').randomBytes(32).toString('base64'))"
CREDENTIALS_ENCRYPTION_KEY=base64:AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:4000

# NextAuth (for web dashboard)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-this-in-production-min-32-chars
